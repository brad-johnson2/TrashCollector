@model IEnumerable<TrashCollector.Models.PickUp>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomPickUp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpComplete)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        @if (item.WeekDay == "Monday")
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomPickUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickUpComplete)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
        
    }

</table>
